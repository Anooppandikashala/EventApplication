<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anoop.myprojects.eventapplication.AddEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorPrimarylight"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="Add Event"
            android:textSize="25dp"
            android:gravity="center"
            android:background="@drawable/loginback"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <GridLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:columnCount="1"
            android:padding="5dp"
            android:background="@drawable/loginback"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event Name :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/eventname"
                    android:layout_height="wrap_content"
                    android:hint="Event Name"/>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event\nDescription :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/eventdesc"
                    android:layout_height="wrap_content"
                    android:hint="Event Description"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event Date :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/date"
                    android:hint="mm/dd/yyyy"
                    android:layout_height="wrap_content"
                    />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event Time :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/time"
                    android:layout_height="wrap_content"
                    android:hint="Eg :10 AM/PM"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event Venue :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/venue"
                    android:layout_height="wrap_content"
                    android:hint="Event Venue"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Event Coordinator :"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:id="@+id/coordinator"
                    android:layout_height="wrap_content"
                    android:hint="Coordinator Name"/>



            </LinearLayout>








        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:weightSum="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:id="@+id/addevent"
                android:background="@drawable/loginback"
                android:onClick="addEvents"
                android:text="Add event"/>



        </LinearLayout>







    </LinearLayout>


</android.support.constraint.ConstraintLayout>
